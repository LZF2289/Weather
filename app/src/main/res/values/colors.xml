<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 主要颜色 - 浅蓝色系 -->
    <color name="primary">#2196F3</color>          <!-- 蓝色 -->
    <color name="primary_dark">#1976D2</color>     <!-- 深蓝色，用于状态栏 -->
    <color name="primary_light">#BBDEFB</color>    <!-- 浅蓝色，用于背景等 -->
    <color name="accent">#03A9F4</color>           <!-- 亮蓝色，用于强调的元素 -->

    <!-- 其他基本颜色 -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="light_gray">#F5F5F5</color>
    <color name="dark_gray">#757575</color>
    <color name="medium_gray">#BDBDBD</color>

    <!-- 功能颜色 -->
    <color name="error">#F44336</color>            <!-- 错误提示颜色，红色 -->
    <color name="success">#4CAF50</color>          <!-- 成功提示颜色，绿色 -->
    <color name="warning">#FF9800</color>          <!-- 警告提示颜色，橙色 -->

    <!-- 天气卡片颜色 -->
    <color name="forecast_card_bg">#E3F2FD</color> <!-- 浅蓝色背景，替换掉当前的darker_gray -->

    <!-- 兼容性颜色（为了不破坏现有代码） -->
    <color name="colorPrimary">@color/primary</color>
    <color name="colorPrimaryDark">@color/primary_dark</color>
    <color name="colorAccent">@color/accent</color>
    <color name="purple_200">#BBDEFB</color>     <!-- 替换为浅蓝色 -->
    <color name="purple_500">@color/primary</color>
    <color name="purple_700">@color/primary_dark</color>
    <color name="teal_200">#03A9F4</color>      <!-- 替换为亮蓝色 -->
    <color name="teal_700">#0288D1</color>      <!-- 替换为深亮蓝色 -->
</resources>